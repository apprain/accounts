<InformationSet>
    <!--
    /**
     * Base Section
     * Contain all Global Options
     */
    -->
    <base mode="db">
        <version>0.1.0</version>
        <lastupdate>2009-12-01</lastupdate>
        <title>Account Type</title>
        <admin_tab>accounts</admin_tab>
		<addons />
       <parameters />
        <generic-field>
            <enabled>No</enabled>
            <title>Sort Order</title>
            <type>genericTag</type>
            <validation>
                <rule>
                    <type>isNumber</type>
                    <err-message>Sort Order must be integer type value</err-message>
                </rule>
            </validation>
            <tag-attributes>
                <attribute name="id">generic</attribute>
                <attribute name="class">app_input</attribute>
            </tag-attributes>
        </generic-field>
        <max_entry>
            <limit></limit>
            <message><![CDATA[]]></message>
        </max_entry>
        <sreach>
              <status>Yes</status>
              <field-selected>title</field-selected>
			  <field-description>description</field-description>
              <parma-link>
                <!-- Relative Absolute -->
                <type>Relative</type>
                <uri><![CDATA[blog-by-post/[id]/[title]]]></uri>
              </parma-link>
        </sreach>
    </base>
    <!--
    /**
     * Fields Section
     * Contain all input Fields Definitions
     */
    -->
    <fields>
		<field name="name">
            <title>Name</title>
            <type>inputTag</type>
            <searchable>Yes</searchable>
            <validation>
                <rule>
                    <type>notEmpty</type>
                    <err-message>Enter a name</err-message>
                </rule>
            </validation>
            <parameters />
            <tag-attributes>
                <attribute name="id">title</attribute>
                <attribute name="class">app_input</attribute>
            </tag-attributes>
        </field> 
        <field name="tier">
            <title>Tier</title>
            <type>radioTag</type>
			<db-attribute>
				<attribute name="type ">enum</attribute>
                <attribute name="length"></attribute>
				<attribute name="null"></attribute>
				<attribute name="default"></attribute>
			</db-attribute>				
            <validation/>
            <options>
                <option value="ASSET">ASSET</option>
                <option value="LIABILITY">LIABILITY</option>
                <option value="INCOME">INCOME</option>
                <option value="EXPENSE">EXPENSE</option>
            </options>
            <selected>LIABILITY</selected>
            <tag-attributes>
                <attribute name="id">tier1</attribute>
                <attribute name="class">app_input</attribute>
            </tag-attributes>
        </field>
		<field name="accgenerator">
		  <title>Generator</title>
		  <hints/>
		  <type>informationTag</type>
		  <validation>
			  <rule>
				  <type>notEmpty</type>
				  <err-message>Select A/C No Generator</err-message>
			  </rule>
		  </validation>
		  <parameters>
			  <parameter name="information_type">accgenerator</parameter>
			  <parameter name="key">id</parameter>
			  <parameter name="val">name</parameter>
			  <parameter name="inputType">selectTag</parameter>
		  </parameters>
		  <tag-attributes>
			  <attribute name="id">accgenerator</attribute>
		  </tag-attributes>
		</field>
        <field name="scheme">
            <title>Type</title>
            <type>radioTag</type>
			<db-attribute>
				<attribute name="type ">enum</attribute>
                <attribute name="length"></attribute>
				<attribute name="null"></attribute>
				<attribute name="default"></attribute>
			</db-attribute>				
            <validation/>
            <options>
                <option value="CONSOLIDATED">CONSOLIDATED</option>
                <option value="NONCONSOLIDATED">NONCONSOLIDATED</option>
            </options>
            <selected>CONSOLIDATED</selected>
            <tag-attributes>
                <attribute name="id">type</attribute>
                <attribute name="class">app_input</attribute>
            </tag-attributes>
        </field>		
    </fields>
</InformationSet>